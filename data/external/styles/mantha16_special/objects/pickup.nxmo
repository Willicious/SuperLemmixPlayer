EFFECT PICKUPSKILL
TRIGGER_X 4
TRIGGER_Y 9
TRIGGER_WIDTH 4
TRIGGER_HEIGHT 7

DIGIT_X 11
DIGIT_Y 8
DIGIT_ALIGNMENT RIGHT
DIGIT_LENGTH 0

$PRIMARY_ANIMATION
  NAME *PICKUP
  OFFSET_X -6
  OFFSET_Y -6
$END

$ANIMATION
  FRAMES 2
  NAME skill_mask
  HIDE
$END

$ANIMATION
  FRAMES 1
  NAME mask_border
  COLOR pickup_border
$END

$ANIMATION
  FRAMES 1
  NAME mask_inside
  COLOR pickup_inside
  
  $TRIGGER
    CONDITION EXHAUSTED
    HIDE
  $END
$END

$ANIMATION
  FRAMES 1
  NAME inside_used
  HIDE
  
  $TRIGGER
    CONDITION EXHAUSTED
    # "Don't hide" is implied.
  $END
$END
