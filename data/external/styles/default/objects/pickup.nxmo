EFFECT PICKUPSKILL
TRIGGER_X 4
TRIGGER_Y 8
TRIGGER_WIDTH 8
TRIGGER_HEIGHT 12

DIGIT_X 0
DIGIT_Y 0
DIGIT_ALIGNMENT RIGHT
DIGIT_LENGTH 0

$PRIMARY_ANIMATION
  NAME *PICKUP
  OFFSET_X -4
  OFFSET_Y -4
$END

$ANIMATION
  FRAMES 2
  NAME skill_mask
  HIDE
$END

$ANIMATION
  FRAMES 32
  NAME mask_border
  COLOR pickup_border
$END

$ANIMATION
  FRAMES 1
  NAME mask_inside
  COLOR pickup_inside
  
  $TRIGGER
    CONDITION EXHAUSTED
    HIDE
  $END
$END

$ANIMATION
  FRAMES 1
  NAME inside_used
  HIDE
  
  $TRIGGER
    CONDITION EXHAUSTED
    # "Don't hide" is implied.
  $END
$END
