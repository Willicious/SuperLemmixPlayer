PICKUP_SKILL
TRIGGER_X 4
TRIGGER_Y 9
TRIGGER_WIDTH 4
TRIGGER_HEIGHT 7

$PRIMARY_ANIMATION
  NAME *null
  OFFSET_X -2
  OFFSET_Y -2
$END

$ANIMATION
  FRAMES 2
  NAME erase
  HIDE
$END

$ANIMATION
  FRAMES 1
  NAME mask_border
  COLOR pickup_border
$END

$ANIMATION
  FRAMES 1
  NAME mask_inside
  COLOR pickup_inside
  
  $TRIGGER
    CONDITION EXHAUSTED
    HIDE
  $END
$END

$ANIMATION
  FRAMES 1
  NAME inside_used
  HIDE
  
  $TRIGGER
    CONDITION EXHAUSTED
    # "Don't hide" is implied.
  $END
$END