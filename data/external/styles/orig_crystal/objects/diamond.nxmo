EFFECT COLLECTIBLE
TRIGGER_X 0
TRIGGER_Y 9
TRIGGER_WIDTH 12
TRIGGER_HEIGHT 11

$PRIMARY_ANIMATION
  FRAMES 8
$END

$ANIMATION
  FRAMES 28
  NAME constant
  OFFSET_X 0
  OFFSET_Y 9
  
  $TRIGGER
    CONDITION DISABLED
    HIDE
  $END
  
  $TRIGGER
    CONDITION BUSY
    HIDE
  $END
  
  $TRIGGER
    CONDITION EXHAUSTED
    HIDE
  $END
$END

$ANIMATION
  FRAMES 2
  NAME deactivated
  OFFSET_X 0
  OFFSET_Y 9
  
  $TRIGGER
    CONDITION DISABLED
    STATE PAUSE
  $END
  
  $TRIGGER
    CONDITION BUSY
    HIDE
  $END
  
  $TRIGGER
    CONDITION EXHAUSTED
    HIDE
  $END
$END
